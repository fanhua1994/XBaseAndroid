<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.hengyi.baseandroiddemo.MainActivity">

    <com.hengyi.baseandroidcore.weight.EaseTitleBar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        app:titleBarTitle="XBaseAndroid"
        app:titleBarLeftImage="@drawable/icon_back"
        android:layout_height="50dp">

    </com.hengyi.baseandroidcore.weight.EaseTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

                <com.hengyi.baseandroidcore.weight.LoadingLayout
                    android:id="@+id/loading_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.hengyi.baseandroidcore.weight.LoadingLayout>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/xbase_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打开XBaseAndroid主页"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:id="@+id/xbase_mui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打开MUI演示"
                    android:layout_margin="10dp"
                    />

                <Button
                    android:id="@+id/xbase_sui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="打开SUI演示"
                    android:layout_margin="10dp"
                    />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
